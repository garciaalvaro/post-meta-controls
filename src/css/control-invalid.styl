/*
 * controls
 */

.ps-control-invalid
    color rgba(0,0,0,0.85)

    .components-base-control__label
        position relative

    &:before
        content ""
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        background-color rgb(251,234,234)
        border-left 4px solid rgb(220,50,50)

.ps-control-invalid-message
    display block

    + .ps-control-invalid-message
        margin-top 15px

.ps-control-invalid-title
    font-size 13px
    font-weight 500
    display block
