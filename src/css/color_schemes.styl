// Light

.pmc-color_scheme-type-light
	--text_color rgba(0,0,0,0.87)
	--text_color_softer rgba(0,0,0,.75)
	--border_color rgba(0,0,0,.1)
	--border_color_softer rgba(0,0,0,.05)
	--border_color_stronger rgba(0,0,0,.4)
