/**
 * Warnings
 */

+prefix-classes('pmc-')

	.warning-header
		position relative
		padding 2em 1.2em
		width 100%
		font-size 1.05em

	.warning
		color rgba(0,0,0,0.85)
		background-color #f9e2e2
		border-left 4px solid #d94f4f
		position relative
		padding 2em 1.2em
		width 100%

		.components-base-control__label
			position relative

		+ .warning
			margin-top 5px

	.warning-title
		font-size 13px
		font-weight 500
		display block
		margin-bottom 5px
